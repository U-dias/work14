<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <%= render 'room_menu' %>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                <h4 class="mt-4 mb-4"><b>部屋の住所</b></h4>
                    <%= form_for @room do |f| %>
                        <div class="mb-4">
                            <%= f.label :住所 %>
                            <%= f.text_field :address, placeholder: "住所を入力", class: "form-control w-100", required: true %>
                        </div>
                        <div>
                            <%= f.submit "保存", class: "btn btn-danger w-100" %>
                        </div>
                    <% end %>
      
                </div>
            </div>
        </div>
    </div>
</div>
